<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css"/>
    <style type="text/css" class="init">
	
	  </style>

    <title>A/V File Ingester</title>
  </head>
  <body>
    <div class="container">
        {{>layout/navbar}}

        <div class="row">
            <div class="col-10">
                File Viewer: {{json.filename}}<br />
                <small>ID: {{json.id}}</small>
            </div>
            <div class="col-2">
                <a class="btn btn-primary" href="/fileBytes.html?id={{json.id}}">Download Video</a>
            </div>
        </div>

        <br />
        <h3>Analysis</h3>
        <div class="mb-3">
            <div id="waveform" style="border:1px solid grey"></div>
        </div>        
        <div class="mb-3">
            <button class="btn btn-primary" data-action="play" onclick="wavesurfer.playPause()">Play / Pause</button>
        </div>
        
        <div class="mb-3">
            
        </div>  
    </div>

    <div class="container">
      {{>layout/footer}}
    </div>
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
	  <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/wavesurfer.js"></script>
    <script>
        var wavesurfer = WaveSurfer.create({
            container: '#waveform',
            waveColor: 'grey',
            progressColor: 'blue',
            barHeight:5
        });

        wavesurfer.load('/fileBytes.html?id={{json.id}}');
    </script>

    <script type="text/javascript" class="init">
        $(document).ready(function() {
            //$("#fileTranscript").DataTable();
        } );
    </script>
  </body>
</html>
