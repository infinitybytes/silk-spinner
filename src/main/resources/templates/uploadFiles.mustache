<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>A/V File Ingester</title>
  </head>
  <body>
    <div class="container">
      {{>layout/navbar}}

      <div class="mb-3"> 
          <form action="/upload.html" enctype="multipart/form-data" method="POST">
            <label for="formFileMultiple" class="form-label">Upload a ZIP file up to 11GB in size using the 'Browse...' button below</label>
            <input class="form-control" type="file" name="files" id="formFileMultiple">
            <br />
            <input class="btn btn-success" type="submit" name="submit" value="Upload Zip File" />
          </form>
      </div>  
    </div>

    <div class="container">
      {{>layout/footer}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
